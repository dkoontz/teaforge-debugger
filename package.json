{
  "name": "teaforge-debugger",
  "version": "1.0.0",
  "description": "A debugging utility for TeaForge-based applications. Reads and parses TeaForge log files to visualize state changes, messages, and effects.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:elm": "elm make src/Main.elm --output=dist/elm.js",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "build": "npm run build:elm && npm run build:css",
    "watch:elm": "elm-live src/Main.elm --output=dist/elm.js -- --debug",
    "watch:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch"
  },
  "keywords": [
    "teaforge",
    "debugger",
    "elm",
    "electron",
    "elm-architecture"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "daisyui": "^5.0.0",
    "electron": "^32.0.0",
    "elm-live": "^4.0.2",
    "postcss": "^8.4.49",
    "split.js": "^1.6.5",
    "tailwindcss": "^3.4.17"
  }
}
